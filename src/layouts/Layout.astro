---
interface Props {
	title: string;
}

import Nav from "../components/Nav"
import Hero from "../components/Hero"
import LowerNav from "../components/LowerNav"
import Footer from "../components/Footer"
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Porfolio website of AKash Sharma" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav client:load />
		<Hero />
		<LowerNav client:load/>
		<slot />
		<Footer />	
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	body {
		font-family: "Inter", sans-serif;
	}

	@layer base {
		h3 {
			@apply text-2xl font-semibold;
		}
		html {
			@apply scroll-smooth;
		}
		body {
			@apply dark:bg-primary bg-white;
		}
	}

	@layer components {
		.nav-links {
			@apply text-sec cursor-pointer flex items-center gap-1;
		}
		.container-screen {
			@apply max-w-[850px] px-4 lg:px-0 w-full mx-auto;
		}
		.btn-project {
			@apply p-1 bg-white text-black text-xl rounded-md;
		}
		.dark-text-l{
			@apply dark:text-white/60 text-black/60;
		}
		.dark-text{
			@apply dark:text-white text-black;
		}
	}
</style>
